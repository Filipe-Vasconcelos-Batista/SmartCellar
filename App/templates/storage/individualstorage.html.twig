{% block body %}
<div class="text-center">
        <h1>{{ storage.name }}</h1>
    <div class="mb-3">
        <a href="{{ path('app_insert_photo', {'id': storage.id|e}) }}" class="btn btn-success">Add Photo</a>
        <a href="{{ path('app_insert_barcode', {'id': storage.id|e}) }}" class="btn btn-success">Add Barcode</a>
    </div>
</div>

<div>
    {%  if products %}
        <div class="mb-3">
            <table class="table table-striped table-bordered">
                <caption>Your list of products</caption>
                <thead>
                    <tr>
                        <th scope="col">Barcode</th>
                        <th scope="col">Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Min Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    {% for product in products  %}
                        <tr>
                            <td><a href="{{path('app_product_page',{'id':product.id})}}">{{ product.barcode }}</a></td>
                            <td>{{ product.title }}</td>
                            <td>{{ product.category }}</td>
                            <td>{{ product.quantity }}</td>
                            <td>{{ product.minQuantity }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}