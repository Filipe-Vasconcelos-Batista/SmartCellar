{% extends 'base.html.twig' %}

{% block title %}{{ storage.name }}{% endblock %}
{% block body %}
    <h1>{{ storage.name }}</h1>
<a href="{{ path('app_insert_photo', {'id': storage.id|e}) }}" class="btn btn-success">add photo</a>
<a href="{{ path('app_insert_barcode', {'id': storage.id|e}) }}" class="btn btn-success">add Barcode</a>


<div>
    {%  if products is not empty %}
        <div class="mb-3">
            <table class="table table-striped table-bordered">
                <caption>Your list of products</caption>
                <thead>
                <tr>
                    <th scope="col">Barcode</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Delete</th>
                </tr>
                </thead>
                <tbody>
                {% for product in products  %}
                    <tr>
                        <td>{{ product.category }}</td>
                        <td>{{ product.title }}</td>
                        <td>{{ product.quantity }}</td>
                        <td>{{ product.quantity }}</td>
                        <td>
                            <form action="{{ path('app_delete_entry',{'barcode': product.barcode}) }}" method="post">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}


{% endblock %}
