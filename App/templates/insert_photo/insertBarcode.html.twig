{% extends 'base.html.twig' %}

{% block title %}Capture Webcam Image{% endblock %}

{% block body %}
<div class="container">
    <div class="container d-flex justify-content-center align-items-center" >
        <div class="form-group">
            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
            <div class="mb-3">
                <label for="photo" class="form-label">Barcode</label>
                {{ form_row(form.barcode, {
                    id: 'barcode',
                    required: true,
                }) }}
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success btn-lg" >    Make     </button>
            </div>
            {{form_end(form) }}
        </div>
    </div>
    {%  include 'inserted_product_list/productList.html.twig' %}
</div>
{% endblock %}